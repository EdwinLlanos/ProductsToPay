<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProductTextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/fontSizeNormal</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:text">@string/testDefault</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>


    <style name="ProductTextViewNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorFontNormal</item>
        <item name="android:textSize">@dimen/fontSizeNormal</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:text">@string/testDefault</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="ProductTextViewLight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorFontLight</item>
        <item name="android:textSize">@dimen/fontSizeLight</item>
        <item name="android:text">@string/testDefault</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <dimen name="fontSizeNormal">18sp</dimen>
    <dimen name="fontSizeLight">14sp</dimen>
    <dimen name="marginSizeNormal">12sp</dimen>
    <string name="testDefault">Default</string>
    <color name="colorFontNormal">#4E4D4D</color>
    <color name="colorFontLight">#727171</color>
</resources>
